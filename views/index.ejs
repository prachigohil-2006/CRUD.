<%- include('layout/header') %>
<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if (message) { %>
                <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                    <strong><%= message.message %></strong>
                </div>
            <% } %>
            <div class="table-responsive">
                <% if (users.length > 0) { %>
                    <table class="table table-striped text-center">
                        <thead>
                            <tr class="table-dark">
                                <th class = "text-center">ID</th>
                                <th class = "text-center">Image</th>
                                <th class = "text-center">Name</th>
                                <th class = "text-center">Email</th>
                                <th class = "text-center">Phone</th>
                                <th class = "text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => { %>
                                <tr class = "align-middle">
                                    <td><%= index + 1 %></td> <!-- Modified to show index starting from 1 -->
                                    <td><img src="<%= row.image %>" width="50" class="img-thumbnail" /></td>
                                    <td><%= row.name %></td>
                                    <td><%= row.email %></td>
                                    <td><%= row.phone %></td>
                                    <td>
                                        <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-1g mx-1"></i>edit</a>
                                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-1g mx-1"></i>delete</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <h1 class="text-center text-secondary mt-5">No users found in the database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>
<%- include('layout/footer') %>
